{
    "name": "codeinwp/woocommerce-product-addon",
    "description": "PPOM for WooCommerce",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Themeisle",
            "email": "friends@themeisle.com",
            "homepage": "https://themeisle.com"
        }
    ],
    "scripts": {
        "phpstan": "phpstan",
        "phpstan:generate:baseline": "phpstan --generate-baseline"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "platform-check": false,
        "platform": {
            "php": "7.2"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "installer-disable": "true"
    },
    "require": {
        "codeinwp/themeisle-sdk": "^3.2"
    },
    "autoload": {
        "files": [
            "vendor/codeinwp/themeisle-sdk/load.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "yoast/phpunit-polyfills": "^2.0",
        "codeinwp/phpcs-ruleset": "dev-main",
        "phpstan/phpstan": "^1.12",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "php-stubs/woocommerce-stubs": "^10.1",
        "damian-elenbaas/elementor-stubs": "^3.31"
    }
}
